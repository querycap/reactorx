{
  "name": "reactorx",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "@reactorx/*"
  ],
  "scripts": {
    "clean": "rm -rf  @reactorx/*/lib",
    "fmt": "prettier --write @reactorx/{,**/}{,**/}*.{ts,tsx,json,md}",
    "test": "jest --coverage",
    "build": "tsc && lerna exec -- ts-node ../../rollup.config.ts",
    "prepare": "yarn test && yarn run build"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.8.3",
    "@babel/preset-env": "7.8.3",
    "@babel/runtime": "7.8.3",
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@querycap/babel-preset": "0.0.17",
    "@querycap/eslint-config": "0.0.17",
    "@testing-library/react": "9.4.0",
    "@types/history": "4.7.4",
    "@types/jest": "24.9.0",
    "@types/lodash": "4.14.149",
    "@types/node": "13.1.8",
    "@types/react": "16.9.17",
    "@types/react-dom": "16.9.4",
    "@typescript-eslint/eslint-plugin": "2.16.0",
    "@typescript-eslint/parser": "2.16.0",
    "axios": "0.19.1",
    "babel-jest": "24.9.0",
    "eslint": "6.8.0",
    "eslint-plugin-react": "7.18.0",
    "eslint-plugin-react-hooks": "2.3.0",
    "history": "4.10.1",
    "husky": "4.0.10",
    "jest": "24.9.0",
    "lerna": "3.20.2",
    "lint-staged": "9.5.0",
    "lodash": "4.17.15",
    "prettier": "1.19.1",
    "react": "16.12.x",
    "react-dom": "16.12.x",
    "redux-logger": "3.0.6",
    "rollup": "1.29.0",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-dts": "1.2.0",
    "ts-node": "8.6.2",
    "typescript": "3.7.5",
    "@rollup/plugin-node-resolve": "7.0.0",
    "chalk": "3.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{json}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "moduleFileExtensions": [
      "tsx",
      "ts",
      "json",
      "jsx",
      "js"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "^@reactorx/([^/]+)$": "<rootDir>/@reactorx/$1/src"
    },
    "testRegex": ".*/__tests__/.+\\.(generator|test|spec)\\.(ts|tsx)$"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && lerna bootstrap",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
