{
  "name": "reactorx",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "npm run prepare",
    "bootstrap": "lerna bootstrap",
    "fmt": "npx prettier --write @reactorx/{,**/}{,**/}*.{ts,tsx,json,md}",
    "test": "tsc --noEmit && jest --coverage",
    "build": "lerna exec -- rollup -c ../../rollup.config.ts",
    "prepare": "npm run bootstrap && npm test && npm run build",
    "dev": "webpack-browser-sync --config webpack.config.ts --historyApiFallback --index=../index.html",
    "pkg": "webpack --config webpack.config.ts"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.5.5",
    "@babel/preset-env": "7.5.5",
    "@babel/preset-typescript": "7.3.3",
    "@commitlint/cli": "8.1.0",
    "@commitlint/config-conventional": "8.1.0",
    "@types/history": "4.7.2",
    "@types/html-webpack-plugin": "3.2.1",
    "@types/jest": "24.0.17",
    "@types/lodash": "4.14.136",
    "@types/node": "12.7.1",
    "@types/react": "16.9.1",
    "@types/react-dom": "16.8.5",
    "@types/webpack": "4.32.1",
    "babel-loader": "8.0.6",
    "babel-plugin-pure-calls-annotation": "0.2.2",
    "glamor": "2.20.40",
    "history": "4.9.0",
    "html-webpack-plugin": "3.2.0",
    "husky": "3.0.3",
    "jest": "24.8.0",
    "lerna": "3.16.4",
    "lint-staged": "9.2.1",
    "lodash": "4.17.15",
    "lodash-es": "4.17.15",
    "prettier": "1.18.2",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "redux-logger": "3.0.6",
    "rollup": "1.19.4",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-typescript": "1.0.1",
    "terser-webpack-plugin": "1.4.1",
    "ts-jest": "24.0.2",
    "ts-loader": "6.0.4",
    "ts-node": "8.3.0",
    "typescript": "3.6.2",
    "webpack": "4.39.1",
    "webpack-browser-sync": "0.11.0",
    "webpack-cli": "3.3.6"
  },
  "lint-staged": {
    "*.{ts,tsx,json}": [
      "npx prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      ".+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "tsx",
      "ts",
      "json",
      "jsx",
      "js"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "@reactorx/(.*)": "<rootDir>/@reactorx/$1/src"
    },
    "testRegex": ".*/__tests__/.+\\.(generator|test|spec)\\.(ts|tsx)$"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && lerna bootstrap",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
