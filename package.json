{
  "name": "reactorx",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "npm run prepare",
    "bootstrap": "lerna bootstrap",
    "fmt": "npx prettier --write @reactorx/{,**/}{,**/}*.{ts,tsx,json,md}",
    "test": "jest --coverage",
    "build": "tsc && lerna exec -- rollup -c ../../rollup.config.js",
    "prepare": "npm run bootstrap && npm test && npm run build"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.6.4",
    "@babel/plugin-proposal-class-properties": "7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "7.6.2",
    "@babel/plugin-transform-react-jsx": "7.3.0",
    "@babel/plugin-transform-runtime": "7.6.2",
    "@babel/plugin-transform-typescript": "7.6.3",
    "@babel/preset-env": "7.6.3",
    "@babel/runtime": "7.6.3",
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "@types/history": "4.7.3",
    "@types/jest": "24.0.21",
    "@types/lodash": "4.14.144",
    "@types/node": "12.12.3",
    "@types/react": "16.9.11",
    "@types/react-dom": "16.9.3",
    "@typescript-eslint/eslint-plugin": "2.6.0",
    "@typescript-eslint/parser": "2.6.0",
    "babel-jest": "24.9.0",
    "babel-plugin-pure-calls-annotation": "0.2.2",
    "babel-plugin-typescript-iife-enum": "0.2.1",
    "eslint": "6.6.0",
    "eslint-plugin-react": "7.16.0",
    "eslint-plugin-react-hooks": "2.2.0",
    "history": "4.10.1",
    "husky": "3.0.9",
    "jest": "24.9.0",
    "lerna": "3.18.3",
    "lint-staged": "9.4.2",
    "lodash": "4.17.15",
    "prettier": "1.18.2",
    "react": "16.11.0",
    "react-dom": "16.11.0",
    "redux-logger": "3.0.6",
    "rollup": "1.25.2",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-dts": "1.1.10",
    "rollup-plugin-node-resolve": "5.2.0",
    "typescript": "3.6.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npx prettier --write",
      "npx eslint --fix",
      "git add"
    ],
    "*.{json}": [
      "npx prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "moduleFileExtensions": [
      "tsx",
      "ts",
      "json",
      "jsx",
      "js"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "@reactorx/(.*)": "<rootDir>/@reactorx/$1/src"
    },
    "testRegex": ".*/__tests__/.+\\.(generator|test|spec)\\.(ts|tsx)$"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && lerna bootstrap",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
