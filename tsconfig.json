{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./.tmp",
    "paths": {
      "*": [
        "*",
        "*/src",
        "__types__/*"
      ]
    },
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "jsx": "react",
    "module": "commonjs",
    "lib": [
      "dom",
      "esnext"
    ],
    "target": "es2015",
    "pretty": true,
    "strict": true,
    /* Additional Checks */
    "noUnusedLocals": true,
    "preserveConstEnums": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "removeComments": false,
    "declaration": true,
    "noEmitOnError": false,
    "emitDeclarationOnly": true
  },
  "exclude": [
    ".tmp/*",
    "node_modules/*"
  ]
}
